#calculator {
  width: 325px;
  height: auto;
  margin: 100px auto;
  padding: 20px 20px 10px;
  background: #FFFFFF;
 /* background: linear-gradient(#F3F3F3, #FFFFFF);*/
  border-radius: 1px;
  border: 1px solid black;
  box-shadow: 0px 1px 4px 0px rgba(0,0,0,0.2);
}
html {
  height: 100%;
  background: white;
  background-size: cover;
}
.topScreen {
  .screen {
    margin-top: 20px;
    height: 40px;
    width: auto;
    padding: 0 10px;
    background: rgba(0, 0, 0, 0);
    border: 1px solid #C0C0C0;
    border-radius: 1px;
    font-size: 17px;
    line-height: 40px;
    color: black;
    text-align: right;
    letter-spacing: 1px;
  }
}